\newcommand\hangitemize[2]{%
  \par
  \begin{list}{\parbox[t]{0.1\textwidth}{%
    \hrule height 0pt
    \vskip -0.5\baselineskip
    #1%
    \vskip -1.5\baselineskip
  }}{%
    \listparindent 0pt
    \parsep 0pt
    \leftmargin 0.1\textwidth
    \rightmargin 0\textwidth
    \labelsep 0pt
    \labelwidth 0.1\textwidth
  }\item\leavevmode\vadjust{\nobreak}\ignorespaces #2
  \end{list}
  \par
}

\newcommand\bugtip[1]{%
  \hangitemize{%
    \includegraphics[scale=\iconscale]{#1}%
  }
}

